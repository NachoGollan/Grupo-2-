<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="..\css\productCart.css">
    <%- include ('../partials/head') %>
    <title>eVins | Edicion de producto</title>
</head>
<body>
    <%- include('../partials/header') %>

 <main>

<section>
  <br>
  <div class="divForm">
    <form action="/product?_method=PUT" method="POST">
      <div class="row product-detail">
        <div class="divForm col-md-6">
          <label for="nombre" class="form-label">Nombre del producto:</label>
          <input type="text" value="<%= typeof productoEditable != 'undefined' ? productoEditable.name : ' ' %> " name="nombre" class="form-input">
        </div>
        <div class="divForm">
          <label for="categoria" class="form-label">Categoría:</label>
          <select name="categoria" id="categoria" class="form-input">
            <option value="<%= typeof productoEditable != 'undefined' ? productoEditable.category : ' '%>" selected><%= typeof productoEditable != 'undefined' ? productoEditable.category : ' ' %></option>
            <option value="vinos">Vinos</option>
            <option value="Espumantes">Espumantes</option>
            <option value="Destilados">Destilados</option>
            <option value="Accesorios">Accesorios</option>
          </select>
        </div>
        <div>
          <label for="descuento" class="form-label">Descuento (%):</label>
          <input type="text" value="<%= typeof productoEditable != 'undefined' ? productoEditable.descuento : ' '%>" id="descuento" name="descuento" class="form-input">
        <div class="divForm">
          <label for="description" class="form-label">Descipción:</label>
          <textarea name="description" value="<%= typeof productoEditable != 'undefined' ? productoEditable.description : ' ' %> " id="description" class="form-input"><%=productoEditable.description %></textarea>
        </div>
        <div class="divForm col-md-6">
          <label for="precio" class="form-label">Precio del producto:</label>
          <input type="text" value="<%= typeof productoEditable != 'undefined' ? productoEditable.price : ' ' %> " id="precio" name="precio" placeholder="Ej: 5678" class="form-input">
        </div>
        <div class="divForm">
          <button type="submit" >Editar producto</button>
        </div>
      </div>
    </form>
  </div>
</section>
</main>

 <%- include('../partials/footer') %>
</body>
</html>